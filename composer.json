{
    "name": "xiaker/gourd",
    "description": "Lightweight PHP IoC container",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "psr/container": "^2.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "fatrbaby",
            "email": "fatrbaby@qq.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Xiaker\\Gourd\\": "src/Gourd"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "laravel/pint": "^1.21"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
